# look and feel
hardstatus alwayslastline "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%< "

activity "Activity in %t(%n)"

defshell bash

# Don't display the copyright page
startup_message off

# autodetach
autodetach on

# Change command-mode key to <Ctrl+|>
escape ^||

# 1000 lines in screen
defscrollback 1000

# Open new window in current dir.
bind c stuff "screen -X chdir $PWD; screen bash -l^M"
